{% block title %}Connexion{% endblock %}

{% block body %}
<div class="max-w-md mx-auto mt-10">
    <h1 class="text-2xl font-bold text-center mb-4">Connexion</h1>
    {% if error %}
        <div class="bg-red-100 text-red-700 p-3 rounded mb-4">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    <form method="post" action="{{ path('app_login') }}" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="mb-4">
            <label for="username" class="block text-gray-700 text-sm font-bold mb-2">Nom d'utilisateur :</label>
            <input type="text" name="_username" id="username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="{{ last_username }}" required autofocus>
        </div>
        <div class="mb-4">
            <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Mot de passe :</label>
            <input type="password" name="_password" id="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
        </div>
        <div class="flex items-center justify-between">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Se connecter
            </button>
        </div>
    </form>
</div>
{% endblock %}