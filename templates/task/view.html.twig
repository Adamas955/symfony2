{% block title %}Détails de la tâche{% endblock %}

{% block body %}
    <h1>{{ task.name }}</h1>

    <p><strong>Description :</strong> {{ task.description }}</p>
    <p><strong>Date de creation :</strong> {{ task.createdAt|date('d/m/Y') }}</p>

    <a href="{{ path('task_edit', {'id': task.id}) }}">Modifier</a>
    <a href="{{ path('task_delete', {'id': task.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette tâche ?')">Supprimer</a>
    <a href="{{ path('task_index') }}">Retour à la liste des tâches</a>
{% endblock %}